{
  "name": "fable",
  "version": "0.0.0",
  "description": "A simple component story explorer built with Lit",
  "type": "module",
  "scripts": {
    "dev": "node --experimental-strip-types server.ts",
    "start": "node --experimental-strip-types server.ts",
    "build": "node --experimental-strip-types build.ts",
    "preview": "cd dist && python3 -m http.server 8080",
    "validate:metadata": "node scripts/validate-metadata.js",
    "tokens:sync": "node scripts/sync-tokens.js",
    "icons:sync": "node scripts/sync-icons.js",
    "check:fix": "npx @biomejs/biome check --write .",
    "lint:styles": "node --experimental-strip-types lint-styles.ts",
    "lint:imports": "node --experimental-strip-types lint-imports.ts",
    "lint": "npm run lint:styles && npm run lint:imports && npx @biomejs/biome check .",
    "pretest": "npm run lint"
  },
  "keywords": [
    "web-components",
    "lit",
    "storybook",
    "components"
  ],
  "author": "@artmsilva",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ajv": "^8.17.1"
  }
}
